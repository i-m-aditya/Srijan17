<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/dialog_parent"
    android:background="@android:drawable/screen_background_light_transparent">
<LinearLayout
    android:background="#f1000000"
    android:weightSum="100"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/dialog_heading"
    android:padding="8dp"
    android:layout_width="275dp"
    android:layout_height="wrap_content"
    android:text="Event Name"
    android:textSize="22dp"
    android:textStyle="bold"
    android:textColor="#fffcfc"/>
    <ImageView
        android:layout_gravity="center_vertical"
        android:id="@+id/calendra_icon"
        android:layout_margin="3dp"
        android:src="@drawable/date_icon4"
        android:layout_width="45dp"
        android:layout_height="35dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="24dp" />

</LinearLayout>



        <LinearLayout
            android:background="#ffffff"
            android:weightSum="100"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/location"
                android:background="@drawable/smooth_edges"
                android:padding="8dp"
                android:layout_weight="50"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/location_icon"
                    android:layout_width="45dp"
                    android:layout_height="35dp"
                    android:id="@+id/imageView10" />
                <TextView
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Location"
                    android:textSize="15dp"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/imageView10" />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/set_notification"
                android:background="@drawable/smooth_edges"
                android:padding="8dp"
                android:layout_weight="50"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/notification"
                    android:layout_width="45dp"
                    android:layout_height="35dp"
                    android:id="@+id/imageView9" />
                <TextView
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Notification"
                    android:textSize="15dp"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/imageView9"
                    android:id="@+id/textView5" />

                <Switch
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/notification_switch"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/textView5" />

            </RelativeLayout>
        </LinearLayout>


    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:id="@+id/scrollview_of_dialog"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:scrollbars = "vertical"
        android:scrollbarStyle="insideInset"
        android:background="#0b0b0b">
        <TableLayout
            android:stretchColumns="0"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:background="#e8000000"
                    android:id="@+id/about_layout"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/re_about_layout"
                        android:padding="8dp"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="#EBFCD707">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#000000"
                            android:text="About"
                            android:textSize="18dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentStart="true"
                            android:id="@+id/textView6" />
                        <ImageView
                            android:id="@+id/about_arrow"
                            android:src="@drawable/right_arrow"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="8dp"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/about_text"
                        android:layout_marginTop="5dp"
                        android:background="#e8000000"
                        android:layout_width="330dp"
                        android:layout_height="wrap_content"
                        android:text="about the event "
                        android:textSize="17dp"
                        android:textColor="#ffffff"/>
                </LinearLayout>

            </TableRow>



            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:background="#e8000000"
                    android:id="@+id/rule_layout"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/re_rule_layout"
                        android:padding="8dp"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#000000"
                            android:text="Rules"
                            android:textSize="18dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentStart="true"
                            android:id="@+id/textview7" />
                        <ImageView
                            android:id="@+id/rule_arrow"
                            android:src="@drawable/right_arrow"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="8dp"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/rule_text_box"
                        android:layout_marginTop="5dp"
                        android:background="#e8000000"
                        android:layout_width="330dp"
                        android:layout_height="wrap_content"
                        android:text="about the rule\n\n\n\n\n"
                        android:textSize="17dp"
                        android:textColor="#ffffff"/>
                </LinearLayout>

            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:background="#e8000000"
                    android:id="@+id/judge_layout"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/re_judge_layout"
                        android:padding="8dp"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="#EBFCD707">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#000000"
                            android:text="Judging Criteria"
                            android:textSize="18dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentStart="true"
                            android:id="@+id/textview11" />
                        <ImageView
                            android:id="@+id/judge_arrow"
                            android:src="@drawable/right_arrow"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="8dp"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/judge_text_box"
                        android:layout_marginTop="5dp"
                        android:background="#e8000000"
                        android:layout_width="330dp"
                        android:layout_height="wrap_content"
                        android:text="about the rule\n\n\n\n\n"
                        android:textSize="17dp"
                        android:textColor="#ffffff"/>
                </LinearLayout>

            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:background="#e8000000"
                    android:id="@+id/prize_layout"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/re_prize_layout"
                        android:padding="8dp"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#000000"
                            android:text="Prizes"
                            android:textSize="18dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentStart="true"
                            android:id="@+id/textview12" />
                        <ImageView
                            android:id="@+id/prize_arrow"
                            android:src="@drawable/right_arrow"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="8dp"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/prize_text_box"
                        android:layout_marginTop="5dp"
                        android:background="#e8000000"
                        android:layout_width="330dp"
                        android:layout_height="wrap_content"
                        android:text="about the rule\n\n\n\n\n"
                        android:textSize="17dp"
                        android:textColor="#ffffff"/>
                </LinearLayout>

            </TableRow>
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:background="#e8000000"
                    android:id="@+id/contact_layout"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/re_contact_layout"
                        android:padding="8dp"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="#EBFCD707">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#000000"
                            android:text="Contacts"
                            android:textSize="18dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentStart="true"
                            android:id="@+id/textView8" />
                        <ImageView
                            android:id="@+id/contact_arrow"
                            android:src="@drawable/right_arrow"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="8dp"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/contact_text_box"
                        android:layout_marginTop="5dp"
                        android:background="#e8000000"
                        android:layout_width="330dp"
                        android:layout_height="wrap_content"
                        android:text="about the contact\n\n\n\n\n"
                        android:textSize="17dp"
                        android:textColor="#ffffff"/>
                </LinearLayout>

            </TableRow>


        </TableLayout>
    </ScrollView>


</LinearLayout>